{
  "name": "spana-backend",
  "version": "1.0.0",
  "description": "Backend for Spana service marketplace app",
  "main": "server.ts",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --watch \"**/*.ts\" --exec ts-node server.ts",
    "build": "tsc && npx prisma generate",
    "test": "jest",
    "setup:env": "node scripts/setupEnv.js",
    "test:smtp": "npx ts-node scripts/testSmtp.ts",
    "cleanup:users": "node scripts/cleanupUsers.js",
    "migrate:setup": "ts-node scripts/migrateToPostgres.ts setup",
    "migrate:sync": "ts-node scripts/migrateToPostgres.ts sync",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:generate": "npx prisma generate",
    "postinstall": "npx prisma generate"
  },
  "dependencies": {
    "@prisma/client": "^6.19.0",
    "@types/pg": "^8.15.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^6.11.2",
    "express-validator": "^7.2.1",
    "fs": "^0.0.1-security",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^6.10.1",
    "pg": "^8.16.3",
    "rate-limit-redis": "^4.2.2",
    "redis": "^5.8.2",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "stripe": "^12.18.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@types/node": "^24.7.0",
    "@types/socket.io-client": "^1.4.36",
    "@types/supertest": "^2.0.12",
    "jest": "^29.6.4",
    "mongodb-memory-server": "^8.14.1",
    "nodemon": "^3.0.1",
    "prisma": "^6.19.0",
    "socket.io-client": "^4.8.1",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  }
}
